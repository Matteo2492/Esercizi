<Window x:Class="PURIFICAMI_SIGNORE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PURIFICAMI_SIGNORE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Width="250">
            <Label>Gestione Categorie</Label>
            <Button x:Name="btnCategorie" Click="btnCategorie_Click">Vai</Button>
            <Label>Gestione Prodotti</Label>
            <Button x:Name="btnProdotti" Click="btnProdotti_Click">Vai</Button>
            <Label>Gestione Variazioni</Label>
            <Button x:Name="btnVariazioni" Click="btnVariazioni_Click">Vai</Button>
            <Label>Gestione Utenti</Label>
            <Button x:Name="btnUtenti" Click="btnUtenti_Click">Vai</Button>
        </StackPanel>
    </DockPanel>
</Window>
